@model dynamic
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard";
    var successMessage = Context.Request.Query["msg"].ToString();
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <script>
        alert("@successMessage");
    </script>
}
<h2 class="text-primary">Supervisor Dashboard</h2>

<div class="row mt-4">
    <!-- Intern Count -->
    <div class="col-md-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                        Total Interns
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">12</div> @* replace with dynamic count *@
                </div>
                <i class="fas fa-user-graduate fa-2x text-primary"></i>
            </div>
        </div>
    </div>

    <!-- Pending Applications -->
    <div class="col-md-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                        Pending Applicants
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">5</div> @* replace with dynamic count *@
                </div>
                <i class="fas fa-user-clock fa-2x text-warning"></i>
            </div>
        </div>
    </div>

    <!-- Approved Tasks -->
    <div class="col-md-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                        Assigned Tasks
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">8</div> @* replace with dynamic count *@
                </div>
                <i class="fas fa-tasks fa-2x text-success"></i>
            </div>
        </div>
    </div>
</div>

<div class="mt-5">
    <h4 class="text-secondary">📢 Announcements</h4>
    <ul class="list-group mt-3">
        <li class="list-group-item">New task templates are now available.</li>
        <li class="list-group-item">Orientation scheduled on Monday.</li>
        <li class="list-group-item">Please verify submitted reports before end of week.</li>
    </ul>
</div>
