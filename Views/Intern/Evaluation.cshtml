@model IEnumerable<IMS.Models.Evaluation>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Evaluation";
    var msg = Context.Request.Query["msg"].ToString();
}

@if (!string.IsNullOrEmpty(msg))
{
    <script>
        alert("@msg");
    </script>
}

<div class="container mt-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-file-alt me-2 text-primary"></i>My Evaluation Forms
        </h2>
        <div class="badge bg-primary p-2">
            <i class="fas fa-clock me-1"></i> @DateTime.Now.ToString("MMM dd, yyyy")
        </div>
    </div>

    <!-- Upload Section -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0"><i class="fas fa-cloud-upload-alt me-2"></i>Upload School Evaluation Form</h5>
        </div>
        <div class="card-body">
            <form asp-action="UploadEvaluation" asp-controller="Intern" method="post" enctype="multipart/form-data" class="d-flex flex-column align-items-center">
                <div class="w-100" style="max-width: 600px;">
                    <label for="fileUpload" class="form-label fw-semibold">Select File (PDF, DOCX, JFIF)</label>
                    <div class="input-group mb-2">
                        <input type="file" id="fileUpload" name="file" accept=".pdf,.docx,.jfif" required class="form-control" />
                        <button type="button" class="btn btn-outline-secondary" id="clearFileBtn">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div class="form-text text-center mb-3">Maximum file size: 10MB</div>
                </div>
                <div class="mt-2" style="width: 200px;">
                    <button type="submit" class="btn btn-primary w-100 py-2">
                        <i class="fas fa-upload me-2"></i>Upload File
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Evaluation Table -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light py-3">
            <h5 class="mb-0"><i class="fas fa-list me-2 text-primary"></i>Evaluation History</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Original File</th>
                            <th>Upload Date</th>
                            <th>Reviewed File</th>
                            <th>Reviewed Date</th>
                            <th>Reviewer</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var eval in Model)
                            {
                                <tr>
                                    <!-- Original File -->
                                    <td>
                                        @if (!string.IsNullOrEmpty(eval.OriginalFilePath))
                                        {
                                            <a href="@eval.OriginalFilePath" target="_blank" class="btn btn-sm btn-outline-primary d-flex align-items-center">
                                                <i class="fas fa-eye me-1"></i> View
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No File</span>
                                        }
                                    </td>

                                    <!-- Upload Date -->
                                    <td>
                                        <div class="fw-semibold">@eval.UploadDate.ToString("MMM dd, yyyy")</div>
                                        <small class="text-muted">@eval.UploadDate.ToString("h:mm tt")</small>
                                    </td>

                                    <!-- Reviewed File -->
                                    <td>
                                        @if (!string.IsNullOrEmpty(eval.ReviewedFilePath))
                                        {

                                            <a href="@eval.ReviewedFilePath" target="_blank" class="btn btn-sm btn-success">
                                                <i class="fas fa-eye me-1"></i> View
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not Yet Reviewed</span>
                                        }
                                    </td>

                                    <!-- Reviewed Date -->
                                    <td>
                                        @if (eval.ReviewedDate.HasValue)
                                        {
                                            <div class="fw-semibold">@eval.ReviewedDate?.ToString("MMM dd, yyyy")</div>
                                            <small class="text-muted">@eval.ReviewedDate?.ToString("h:mm tt")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Pending</span>
                                        }
                                    </td>

                                    <!-- Reviewer Info -->
                                    <td>
                                        @if (eval.Status == "Completed" || eval.Status == "Reviewed")
                                        {
                                            if (!string.IsNullOrEmpty(eval.ReviewedFilePath))
                                            {
                                                if (eval.ReviewedBy != null)
                                                {
                                                    <!-- Show Supervisor/Trainer -->
                                                    <span class="fw-semibold">
                                                        @eval.ReviewedBy.FirstName @eval.ReviewedBy.LastName
                                                    </span>
                                                    <div class="text-muted small">@eval.ReviewedBy.Position</div>
                                                }
                                                else
                                                {
                                                    <!-- Show Admin if null -->
                                                    <span class="fw-semibold">Admin</span>
                                                }
                                            }
                                            else
                                            {
                                                <!-- File not uploaded yet -->
                                                <span class="text-muted">Not reviewed</span>
                                            }
                                        }
                                        else
                                        {
                                            <!-- Evaluation not assigned yet -->
                                            <span class="text-muted">Not Assigned</span>
                                        }
                                    </td>


                                    <!-- Status -->
                                    <td>
                                        @{
                                            var statusClass = eval.Status switch
                                            {
                                                "Completed" => "bg-success",
                                                "Reviewed" => "bg-info",
                                                "Submitted" => "bg-primary",
                                                _ => "bg-warning"
                                            };
                                        }
                                        <span class="badge @statusClass rounded-pill p-2">
                                            @if (eval.Status == "Completed")
                                            {
                                                <i class="fas fa-check-circle me-1"></i>
                                            }
                                            else if (eval.Status == "Reviewed")
                                            {
                                                <i class="fas fa-eye me-1"></i>
                                            }
                                            else if (eval.Status == "Submitted")
                                            {
                                                <i class="fas fa-paper-plane me-1"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-clock me-1"></i>
                                            }
                                            @eval.Status
                                        </span>
                                    </td>

                                    <!-- Actions (Delete) -->
                                    <td>
                                        @if (eval.Status != "Completed" && eval.Status != "Reviewed")
                                        {
                                            <form asp-action="DeleteEvaluation" asp-controller="Intern" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@eval.EvaluationId" />
                                                <button type="submit" class="btn btn-danger btn-sm"
                                                        onclick="return confirm('Are you sure you want to delete this evaluation?');">
                                                    <i class="fas fa-trash me-1"></i> Delete
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No actions</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <i class="fas fa-folder-open fa-2x text-muted mb-2"></i>
                                    <p class="text-muted">No evaluation forms uploaded yet.</p>
                                    <p class="text-muted">Upload your first evaluation form using the form above.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Clear file input
        document.getElementById('clearFileBtn').addEventListener('click', function() {
            document.getElementById('fileUpload').value = '';
        });

        // Enhanced delete confirmation
        function confirmDelete(event) {
            event.preventDefault();
            const form = event.target.closest('form');

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });

            return false;
        }

        // File upload validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const fileInput = document.getElementById('fileUpload');
            const file = fileInput.files[0];

            if (file) {
                const fileSize = file.size / 1024 / 1024; // in MB
                if (fileSize > 10) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'error',
                        title: 'File too large',
                        text: 'Please select a file smaller than 10MB.',
                        confirmButtonColor: '#0d6efd'
                    });
                }
            }
        });
    </script>
}

<style>
    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    .table th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        padding: 1rem 0.75rem;
    }

    .table td {
        padding: 1rem 0.75rem;
        vertical-align: middle;
    }

    .btn {
        border-radius: 6px;
        font-weight: 500;
    }

    .badge {
        font-size: 0.8rem;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        border-color: #86b7fe;
    }
</style>