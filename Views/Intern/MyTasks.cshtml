@model IEnumerable<IMS.Models.TasksManage>

@{
    ViewData["Title"] = "Task Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var msg = Context.Request.Query["msg"].ToString();
}

<div class="container-fluid">
    <h1 class="h2 mb-4">My Tasks</h1>

    @if (!string.IsNullOrEmpty(msg))
    {
        <script>
            alert("@msg");
        </script>
    }
    <!-- Tasks Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Tasks</h5>
                    <h2 class="card-text">@Model.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Pending</h5>
                    <h2 class="card-text">@Model.Count(t => t.Status == "Pending")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">In Progress</h5>
                    <h2 class="card-text">@Model.Count(t => t.Status == "In Progress")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Completed</h5>
                    <h2 class="card-text">@Model.Count(t => t.Status == "Completed")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Tasks Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="tasksTable">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Assigned To</th>
                            <th>Assigned By</th>
                            <th>Due Date</th>
                            <th>Priority</th>
                            <th class="text-center">Progress Timeline</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in Model)
                        {
                            var isOverdue = task.DueDate < DateTime.Now && task.Status != "Completed";
                            var started = task.Status == "In Progress" || task.Status == "Completed";
                            var finished = task.Status == "Completed";
                            <tr data-task-id="@task.TaskId"
                            data-priority="@task.Priority"
                            data-assignedto="@task.AssignedToId"
                            class="@(isOverdue ? "table-danger" : "")">

                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(task.ImagePath))
                                        {
                                            <img src="@task.ImagePath" alt="Task image" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
                                        }
                                        <div>
                                            <div class="fw-bold">@task.Title</div>
                                        </div>
                                    </div>
                                </td>
                                <td>@task.AssignedTo?.FirstName @task.AssignedTo?.LastName</td>
                                <td>
                                    @if (task.AssignedById == null)
                                    {
                                        <span>System Admin</span>
                                    }
                                    else if (task.AssignedBy != null)
                                    {
                                        <span>@task.AssignedBy.FirstName @task.AssignedBy.LastName</span>
                                        <small class="text-muted">(@task.AssignedBy.Position)</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Unknown</span>
                                    }
                                </td>

                                <td>
                                    <div>@task.DueDate.ToString("MMM dd, yyyy")</div>
                                    <small class="@(isOverdue ? "text-danger" : "text-muted")">
                                        @task.DueDate.ToString("hh:mm tt")
                                        @if (isOverdue)
                                        {
                                            <span> - Overdue</span>
                                        }
                                    </small>
                                </td>
                                <td>
                                    @if (task.Priority == 1)
                                    {
                                        <span class="badge bg-danger">High</span>
                                    }
                                    else if (task.Priority == 2)
                                    {
                                        <span class="badge bg-warning">Medium</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">Low</span>
                                    }
                                </td>
                                <td>
                                    @if (!started && task.DueDate < DateTime.Now)
                                    {
                                        <!-- Show "Not Available" if overdue and never accepted -->
                                        <div class="text-center text-danger fw-bold">Not Available</div>
                                    }
                                    else
                                    {
                                        <!-- Connected-dot timeline (Created → In Progress → Completed) -->
                                        <div class="progress-timeline">
                                            <!-- Created -->
                                            <div class="timeline-step active">
                                                <div class="timeline-dot">
                                                    <i class="fas fa-check"></i>
                                                </div>
                                                <div class="timeline-label">Created</div>
                                                <div class="timeline-date">@task.CreatedDate.ToString("MMM dd")</div>
                                            </div>

                                            <!-- Connector -->
                                            <div class="timeline-connector @(started ? "active" : "")"></div>

                                            <!-- In Progress -->
                                            <div class="timeline-step @(started ? "active" : "")">
                                                <div class="timeline-dot">
                                                    @if (started)
                                                    {
                                                        <i class="fas fa-check"></i>
                                                    }
                                                </div>
                                                <div class="timeline-label">In&nbsp;Progress</div>
                                                @if (started)
                                                {
                                                    <div class="timeline-date">@((task.AcceptedDate ?? task.CreatedDate).ToString("MMM dd"))</div>
                                                }
                                            </div>

                                            <!-- Connector -->
                                            <div class="timeline-connector @(finished ? "active" : "")"></div>

                                            <!-- Completed -->
                                            <div class="timeline-step @(finished ? "active" : "")">
                                                <div class="timeline-dot">
                                                    @if (finished)
                                                    {
                                                        <i class="fas fa-check"></i>
                                                    }
                                                </div>
                                                <div class="timeline-label">Completed</div>
                                                @if (finished)
                                                {
                                                    <div class="timeline-date">@task.CompletedDate?.ToString("MMM dd")</div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </td>

                                <td>
                                    <!-- View button -->
                                    <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#viewTaskModal-@task.TaskId">
                                        <i class="fas fa-eye"></i>
                                    </button>

                                    @if (task.Status == "Pending")
                                    {
                                        if (task.DueDate < DateTime.Now)
                                        {
                                            <!-- Overdue pending task = cannot accept -->
                                            <button type="button" class="btn btn-sm btn-secondary" disabled title="Task overdue, cannot accept">
                                                <i class="fas fa-ban"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <!-- Accept button -->
                                            <form asp-action="AcceptTask" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@task.TaskId" />
                                                <button type="submit" class="btn btn-sm btn-success" title="Accept Task">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                    }
                                    else if (task.Status == "In Progress")
                                    {
                                        <!-- Unaccept button -->
                                        <form asp-action="UnacceptTask" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@task.TaskId" />
                                            <button type="submit" class="btn btn-sm btn-danger" title="Unaccept Task">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </form>
                                    }

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Per-task modals (View + Edit) rendered after the table for valid HTML structure -->
    @foreach (var taskModal in Model)
    {
        <!-- View Task Modal -->
        <div class="modal fade" id="viewTaskModal-@taskModal.TaskId" tabindex="-1" aria-labelledby="viewTaskModalLabel-@taskModal.TaskId" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="viewTaskModalLabel-@taskModal.TaskId">Task Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h5 class="fw-bold">@taskModal.Title</h5>
                                <p>@taskModal.Description</p>
                                <p><strong>Assigned To:</strong> @taskModal.AssignedTo?.FirstName @taskModal.AssignedTo?.LastName</p>
                                <p>
                                    <strong>Assigned By:</strong>
                                    @if (taskModal.AssignedBy != null)
                                    {
                                        <span>@taskModal.AssignedBy.FirstName @taskModal.AssignedBy.LastName (@taskModal.AssignedBy.Position)</span>
                                    }
                                    else
                                    {
                                        <span>Admin</span>
                                    }
                                </p>
                                <p><strong>Due Date:</strong> @taskModal.DueDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                                <p>
                                    <strong>Priority:</strong>
                                    @if (taskModal.Priority == 1)
                                    {
                                        <span class="badge bg-danger">High</span>
                                    }
                                    else if (taskModal.Priority == 2)
                                    {
                                        <span class="badge bg-warning">Medium</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">Low</span>
                                    }
                                </p>
                                @if (!string.IsNullOrEmpty(taskModal.ProgressNotes))
                                {
                                    <p><strong>Progress Notes:</strong> @taskModal.ProgressNotes</p>
                                }
                            </div>
                            <div class="col-md-4 text-center">
                                @if (!string.IsNullOrEmpty(taskModal.ImagePath))
                                {
                                    <img src="@taskModal.ImagePath" class="img-fluid rounded mb-2" alt="Task image" style="max-height:200px; object-fit:cover;">
                                }
                                <p class="text-muted">Created: @taskModal.CreatedDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                                @if (taskModal.AcceptedDate.HasValue)
                                {

                                    <p class="text-info">Started: @taskModal.AcceptedDate.Value.ToString("MMM dd, yyyy hh:mm tt")</p>
                                }
                                @if (taskModal.CompletedDate.HasValue)
                                {
                                    <p class="text-success">Completed: @taskModal.CompletedDate.Value.ToString("MMM dd, yyyy hh:mm tt")</p>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Include same timeline CSS from admin -->
<link rel="stylesheet" href="~/css/Admin/taskMng.css" />

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "In Progress" => "bg-info",
            "Completed" => "bg-success",
            "Overdue" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
