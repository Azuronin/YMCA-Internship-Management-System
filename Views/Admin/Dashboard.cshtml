@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard";
    var msg = Context.Request.Query["msg"].ToString();
}

@if (!string.IsNullOrEmpty(msg))
{
    <script>
        alert("@msg");
    </script>
}
<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">📊 Dashboard</h2>
        <div class="d-flex">
            <span class="badge bg-light text-dark me-2 p-2">
                <i class="fas fa-calendar-alt me-1"></i> @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
            </span>
            <span class="badge bg-light text-dark p-2">
                <i class="fas fa-clock me-1"></i> <span id="current-time">@DateTime.Now.ToString("h:mm tt")</span>
            </span>
        </div>
    </div>

    <!-- Dashboard Stats -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card dashboard-stat-card bg-primary text-white"
                 onclick="window.location='/Admin/Interns'">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title text-white-50 mb-1">Total Interns</h6>
                            <h3 class="fw-bold mb-0">@ViewBag.TotalInterns</h3>
                        </div>
                        <div class="flex-shrink-0">
                            <div class="stat-icon">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-white text-primary">
                            <i class="fas fa-check-circle me-1"></i> Active
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card dashboard-stat-card bg-warning text-dark"
                 onclick="window.location='/Admin/ManageUsers'">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title text-dark-50 mb-1">Pending Interns</h6>
                            <h3 class="fw-bold mb-0">@ViewBag.PendingInterns</h3>
                        </div>
                        <div class="flex-shrink-0">
                            <div class="stat-icon">
                                <i class="fas fa-file-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-white text-warning">
                            <i class="fas fa-clock me-1"></i> Inactive
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card dashboard-stat-card bg-info text-white"
                 onclick="window.location='/Admin/TaskManagement'">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title text-white-50 mb-1">Total Tasks</h6>
                            <h3 class="fw-bold mb-0">@ViewBag.TotalTasks</h3>
                        </div>
                        <div class="flex-shrink-0">
                            <div class="stat-icon">
                                <i class="fas fa-list-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-white text-primary">
                            <i class="fas fa-info-circle me-1"></i> Overview
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card dashboard-stat-card bg-success text-white"
                 onclick="window.location='/Admin/TaskProgress'">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title text-white-50 mb-1">Completed Tasks</h6>
                            <h3 class="fw-bold mb-0">@ViewBag.CompletedTasks</h3>
                        </div>
                        <div class="flex-shrink-0">
                            <div class="stat-icon">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-white text-success">
                            <i class="fas fa-trending-up me-1"></i> Achieved
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="row g-4">
        <!-- Intern Status Overview -->
        <div class="col-xl-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-transparent border-0 pt-4 pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">👥 Intern Status Overview</h5>
                        <a href="/Admin/Interns" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <p class="text-muted mb-0">Track all interns' progress and task completion</p>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Intern Name</th>
                                    <th>Course</th>
                                    <th>School</th>
                                    <th>Hours Rendered</th>
                                    <th>Total Tasks</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.Interns != null && ViewBag.Interns.Count > 0)
                                {
                                    foreach (var intern in ViewBag.Interns)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-light rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                        <span class="text-dark fw-bold">@intern.FullName[0]</span>
                                                    </div>
                                                    <div>@intern.FullName</div>
                                                </div>
                                            </td>
                                            <td>@intern.Course</td>
                                            <td>@intern.School</td>
                                            <td>
                                                <small class="text-muted">
                                                    @($"{Convert.ToDecimal(intern.HoursRendered):0.00}") / @intern.HoursRequired hours
                                                </small>

                                            </td>


                                            <td>
                                                <!-- ✅ Show actual number of tasks -->
                                                <span class="badge bg-primary rounded-pill">@intern.TotalTasks Tasks</span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4 text-muted">
                                            <i class="fas fa-users fa-2x mb-2"></i>
                                            <p class="mb-0">No interns available</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats & Actions -->
        <div class="col-xl-4">
            <!-- Pending Applicants Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-transparent border-0 pt-4 pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">📝 New Applicants</h5>
                        <span class="badge bg-warning rounded-pill">@ViewBag.PendingApplicants</span>
                    </div>
                    <p class="text-muted mb-0">Applications awaiting review</p>
                </div>
                <div class="card-body">
                    @if (ViewBag.PendingList != null && ViewBag.PendingList.Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (IMS.Models.Applicants applicant in ViewBag.PendingList)
                            {
                                <div class="list-group-item border-0 px-0">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1">@applicant.FileName</h6>
                                            <small class="text-muted">Uploaded: @applicant.UploadDate.ToString("MMM dd, yyyy")</small>
                                        </div>
                                        <div class="flex-shrink-0">
                                            <a href="@Url.Content(applicant.FilePath)" target="_blank" class="btn btn-sm btn-outline-primary me-1" title="View File">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/Admin/DeleteApplicant/@applicant.ApplicantId" class="btn btn-sm btn-outline-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this applicant?');">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="text-center mt-3">
                            <a href="/Admin/Applications" class="btn btn-sm btn-outline-primary">View All Applicants</a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-file-alt fa-2x mb-2"></i>
                            <p class="mb-0">No pending applicants</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Task Summary Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-transparent border-0 pt-4 pb-0">
                    <h5 class="card-title mb-0">📂 Task Summary</h5>
                    <p class="text-muted mb-0">Overview of task progress</p>
                </div>
                <div class="card-body">
                    <div class="row g-3 text-center">
                        <div class="col-6">
                            <a href="/Admin/TaskProgress?status=Completed" class="text-decoration-none">
                                <div class="p-3 border rounded shadow-sm bg-light-hover">
                                    <div class="text-success mb-2">
                                        <i class="fas fa-check-circle fa-2x"></i>
                                    </div>
                                    <h6 class="text-black">Completed</h6>
                                    <h4 class="text-success mb-0">@ViewBag.CompletedTasks</h4>
                                </div>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="/Admin/TaskProgress?status=In Progress" class="text-decoration-none">
                                <div class="p-3 border rounded shadow-sm bg-light-hover">
                                    <div class="text-primary mb-2">
                                        <i class="fas fa-spinner fa-2x"></i>
                                    </div>
                                    <h6 class="text-black">Ongoing</h6>
                                    <h4 class="text-primary mb-0">@ViewBag.OngoingTasks</h4>
                                </div>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="/Admin/TaskProgress?status=Overdue" class="text-decoration-none">
                                <div class="p-3 border rounded shadow-sm bg-light-hover">
                                    <div class="text-danger mb-2">
                                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                                    </div>
                                    <h6 class="text-black">Overdue</h6>
                                    <h4 class="text-danger mb-0">@ViewBag.OverdueTasks</h4>
                                </div>
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="/Admin/TaskProgress?status=Pending" class="text-decoration-none">
                                <div class="p-3 border rounded shadow-sm bg-light-hover">
                                    <div class="text-warning mb-2">
                                        <i class="fas fa-clock fa-2x"></i>
                                    </div>
                                    <h6 class="text-black">Pending</h6>
                                    <h4 class="text-warning mb-0">@ViewBag.PendingTasks</h4>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Inline Styles -->
<style>
    .dashboard-stat-card {
        border: none;
        border-radius: 12px;
        transition: transform 0.2s;
    }

        .dashboard-stat-card:hover {
            transform: translateY(-5px);
        }

    .stat-icon {
        opacity: 0.8;
    }

    .avatar-sm {
        width: 32px;
        height: 32px;
    }

    .bg-light-hover:hover {
        background-color: #f8f9fa !important;
        transform: translateY(-2px);
        transition: all 0.2s;
    }

    .progress {
        border-radius: 10px;
    }

    .card {
        border: none;
        border-radius: 12px;
    }

    .card-header {
        border-radius: 12px 12px 0 0 !important;
    }

    .table th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        color: #6c757d;
    }
</style>

<!-- Inline Script -->
<script>
    // Update current time
    function updateTime() {
        const now = new Date();
        const timeEl = document.getElementById('current-time');
        if (timeEl) {
            timeEl.textContent = now.toLocaleTimeString('en-US', {
                hour: 'numeric',
                minute: '2-digit',
                hour12: true
            });
        }
    }

    setInterval(updateTime, 60000);
    updateTime();
</script>
