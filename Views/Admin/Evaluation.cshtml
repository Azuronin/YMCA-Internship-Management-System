@model IEnumerable<IMS.Models.Evaluation>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Evaluation Management";
    var msg = Context.Request.Query["msg"].ToString();
}

@if (!string.IsNullOrEmpty(msg))
{
    <script>
        alert("@msg");
    </script>
}
<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">
                <i class="fas fa-clipboard-check me-2 text-primary"></i> Evaluation Submissions
            </h2>
            <p class="text-muted">Manage and review intern evaluation forms</p>
        </div>
        <div class="badge bg-primary p-2">
            <i class="fas fa-clock me-1"></i> @DateTime.Now.ToString("MMM dd, yyyy")
        </div>
    </div>

    <!-- Stats Overview Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Submissions</h6>
                            <h3 class="mb-0">@Model.Count()</h3>
                        </div>
                        <i class="fas fa-file-alt fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Pending Review</h6>
                            <h3 class="mb-0">@Model.Count(e => e.Status == "Pending" || e.Status == "Submitted")</h3>
                        </div>
                        <i class="fas fa-clock fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Reviewed</h6>
                            <h3 class="mb-0">@Model.Count(e => e.Status == "Reviewed")</h3>
                        </div>
                        <i class="fas fa-eye fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Completed</h6>
                            <h3 class="mb-0">@Model.Count(e => e.Status == "Completed")</h3>
                        </div>
                        <i class="fas fa-check-circle fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light py-3">
            <h5 class="mb-0"><i class="fas fa-list me-2 text-primary"></i> Evaluation Submissions</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Intern</th>
                            <th>Upload Date</th>
                            <th>Original File</th>
                            <th>Status</th>
                            <th>Reviewed File</th>
                            <th>Reviewed Date</th>
                            <th>Reviewer</th>
                            <th>Upload / Edit Reviewed</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var eval in Model)
                            {
                                <tr>
                                    <!-- Intern Name -->
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                @if (!string.IsNullOrEmpty(eval.Intern?.ProfileImagePath))
                                                {
                                                    <!-- ✅ Show Profile Picture -->
                                                    <img src="@Url.Content(eval.Intern.ProfileImagePath)"
                                                         alt="Profile"
                                                         class="rounded-circle"
                                                         style="width: 38px; height: 38px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <!-- ✅ Fallback Avatar -->
                                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                                         style="width: 38px; height: 38px;">
                                                        <span class="fw-bold">
                                                            @(string.IsNullOrEmpty(eval.Intern?.FirstName) ? "?" : eval.Intern.FirstName.Substring(0, 1))
                                                        </span>
                                                    </div>
                                                }
                                            </div>

                                            <div class="flex-grow-1 ms-3">
                                                @if (eval.Intern != null)
                                                {
                                                    <span class="fw-semibold">@($"{eval.Intern.FirstName} {eval.Intern.LastName}")</span>
                                                    <div class="text-muted small">@eval.Intern.Email</div>
                                                }
                                                else
                                                {
                                                    <span class="text-danger">Unknown Intern</span>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <!-- Upload Date -->
                                    <td>
                                        <div class="fw-semibold">@eval.UploadDate.ToString("MMM dd, yyyy")</div>
                                        <small class="text-muted">@eval.UploadDate.ToString("h:mm tt")</small>
                                    </td>

                                    <!-- Original File -->
                                    <td>
                                        @if (!string.IsNullOrEmpty(eval.OriginalFilePath))
                                        {
                                            <a href="@eval.OriginalFilePath" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye me-1"></i> View
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No File</span>
                                        }
                                    </td>

                                    <!-- Status -->
                                    <td>
                                        @{
                                            var statusClass = eval.Status switch
                                            {
                                                "Completed" => "bg-success",
                                                "Reviewed" => "bg-info",
                                                _ => "bg-warning"
                                            };
                                            var statusIcon = eval.Status switch
                                            {
                                                "Completed" => "fa-check-circle",
                                                "Reviewed" => "fa-eye",
                                                _ => "fa-clock"
                                            };
                                        }
                                        <span class="badge @statusClass p-2">
                                            <i class="fas @statusIcon me-1"></i> @eval.Status
                                        </span>
                                    </td>

                                    <!-- Reviewed File -->
                                    <td>
                                        @if (!string.IsNullOrEmpty(eval.ReviewedFilePath))
                                        {
                                            <a href="@eval.ReviewedFilePath" target="_blank" class="btn btn-sm btn-success">
                                                <i class="fas fa-eye me-1"></i> View
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not Uploaded</span>
                                        }
                                    </td>

                                    <!-- Reviewed Date -->
                                    <td>
                                        @if (eval.ReviewedDate.HasValue)
                                        {
                                            <div class="fw-semibold">@eval.ReviewedDate?.ToString("MMM dd, yyyy")</div>
                                            <small class="text-muted">@eval.ReviewedDate?.ToString("h:mm tt")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not reviewed</span>
                                        }
                                    </td>

                                    <td>
                                        @if (!string.IsNullOrEmpty(eval.ReviewedFilePath))
                                        {
                                            if (eval.ReviewedBy != null)
                                            {
                                                <span class="fw-semibold">@eval.ReviewedBy.FirstName @eval.ReviewedBy.LastName</span>
                                                <div class="text-muted small">@eval.ReviewedBy.Position</div>
                                            }
                                            else
                                            {
                                                <span class="fw-semibold">Admin</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not reviewed</span>
                                        }
                                    </td>

                                    <!-- Upload/Edit Reviewed -->
                                    <td>
                                        <form asp-action="UploadReviewedEvaluation"
                                              asp-controller="Admin"
                                              method="post"
                                              enctype="multipart/form-data"
                                              class="needs-validation" novalidate>
                                            <input type="hidden" name="evaluationId" value="@eval.EvaluationId" />
                                            <div class="mb-2">
                                                <input type="file" name="reviewedFile" accept=".pdf,.docx,.doc,.jpg,.jpeg,.png"
                                                       required class="form-control form-control-sm" />
                                                <div class="invalid-feedback">Please select a file.</div>
                                            </div>
                                            <button type="submit" class="btn btn-sm @(string.IsNullOrEmpty(eval.ReviewedFilePath) ? "btn-primary" : "btn-warning") w-100">
                                                <i class="fas fa-upload me-1"></i>
                                                @(string.IsNullOrEmpty(eval.ReviewedFilePath) ? "Upload" : "Edit")
                                            </button>
                                        </form>
                                    </td>

                                    <!-- Actions -->
                                    <td>
                                        <form asp-action="DeleteEvaluation" asp-controller="Admin" method="post">
                                            <input type="hidden" name="id" value="@eval.EvaluationId" />
                                            <button type="submit" class="btn btn-danger btn-sm"
                                                    onclick="return confirm('Are you sure you want to delete this evaluation?');">
                                                <i class="fas fa-trash me-1"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-5">
                                    <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                                    <p class="text-muted fs-5">No evaluation submissions found.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // Enhanced delete confirmation
        function confirmDelete(event) {
            event.preventDefault();
            const form = event.target.closest('form');

            Swal.fire({
                title: 'Are you sure?',
                text: "This evaluation will be permanently deleted!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });

            return false;
        }

        // Form validation for file uploads
        document.addEventListener('DOMContentLoaded', function() {
            // Enable Bootstrap form validation
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // File size validation
            const fileInputs = document.querySelectorAll('input[type="file"]');
            fileInputs.forEach(input => {
                input.addEventListener('change', function() {
                    const file = this.files[0];
                    if (file) {
                        const fileSize = file.size / 1024 / 1024; // in MB
                        if (fileSize > 10) {
                            Swal.fire({
                                icon: 'error',
                                title: 'File too large',
                                text: 'Please select a file smaller than 10MB.',
                                confirmButtonColor: '#0d6efd'
                            });
                            this.value = '';
                        }
                    }
                });
            });
        });
    </script>
}